extends layout 

block content
  section.content
    #toast
    .main-form
      form#form-3.form.form-login(method='POST' action='/forgotpassword/confirmotp')
        div(class='auth-form__header')
          h3.heading-form Lấy lại mật khẩu
        .spacer
        .form-group
          label.form-label(for='phone') Số điện thoại
          if(data)
            input#phone.form-control(name='phone' type='text' placeholder='Nhập số điện thoại của bạn' value=data.phone)
          else
            input#phone.form-control(name='phone' type='text' placeholder='Nhập số điện thoại của bạn')
          span.form-message
          if(data)
            input#checkStatus(name='checkStatus' type='hidden' value=data.status)
        button.form-submit Nhận OTP
    script(src='/js/login/index.js')
    script.

      var name = $("input[name='checkStatus']").val();
      if(name == "phone invalid") {
        showForgotErrorToast();
      }


      document.addEventListener('DOMContentLoaded', function() {
      // Mong muốn của chúng ta
      
      Validator({
      form: '#form-3',
      formGroupSelector: '.form-group',
      errorSelector: '.form-message',
      rules: [
      Validator.isRequired('#phone'),
      Validator.isPhone('#phone'),
      ],
      
      });
      
      });
    script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
